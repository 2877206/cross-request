{
    "manifest_version": 2,
    "name": "cross-request",
    "description": "A chrome extension that gives the html page cross-domain request capability",
    "version": "2.2",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [ "tabs", "storage", "webRequest", "*://*/*" ],
    "background": 
    {
      "scripts" : [
          "background.js"
          ]
    },
    "web_accessible_resources":[
        "index.js"        
    ],
     "content_scripts": [{
          "matches": ["http://*/*", "https://*/*"],
        "js": [
            "response.js"
        ]
    }]
}